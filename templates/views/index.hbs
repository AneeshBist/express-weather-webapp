<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}

    <!-- Main Header -->
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-md-10 col-12 mx-auto">

                <div class="row">
                    <!-- Left Side -->
                    <div class="col-md-6 col-12 header-left">
                        <p class="hm-title"> Weather App welcomes you</p>
                        <h1> Get Latest <span class="txt-clr">Weather</span> Info Of Your City</h1>
                        <a href="/weather"><button class="btn">Check</button></a>
                    </div>

                    <!-- Right Side -->
                    <div class="col-md-6 col-12 header-right">
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="images/bg1.png" class="bg-w w-100" alt="Sunny">
                                </div>
                                <div class="carousel-item ">
                                    <img src="images/bg2.png" class="bg-w w-100" alt="Clouds">
                                </div>
                                <div class="carousel-item ">
                                    <img src="images/bg3.png" class="bg-w w-100" alt="Rain">
                                </div>
                                <div class="carousel-item ">
                                    <img src="images/bg4.png" class="w-100" alt="Snow">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
   {{>footer}}
</body>

</html>